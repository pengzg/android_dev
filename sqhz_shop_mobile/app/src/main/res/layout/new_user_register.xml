<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="71px"
                android:layout_marginRight="71px"
                android:layout_marginTop="77px"
                android:background="@drawable/background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="35px"
                    android:background="@drawable/background1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:text="手机号"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size40"/>

                    <EditText
                        android:id="@+id/new_register_Tel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:paddingRight="100px"
                        android:maxLength="11"
                        android:textColor="@color/text_787878"
                        android:textSize="@dimen/text_Size40"/>
                    <LinearLayout
                        android:id="@+id/mobile_del"
                        android:layout_width="130px"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="×"
                            android:gravity="center"
                            android:background="@drawable/shape_user_tel_del"
                            android:textColor="@color/text_df1122"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="49px"
                    android:background="@drawable/background1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:text="姓名"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size40"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/new_register_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingRight="100px"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="请输入姓名"
                            android:textColor="@color/text_787878"
                            android:textSize="@dimen/text_Size40"/>
                        <LinearLayout
                            android:id="@+id/name_del"
                            android:layout_width="130px"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="×"
                                android:gravity="center"
                                android:background="@drawable/shape_user_tel_del"
                                android:textColor="@color/text_df1122"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="49px"
                    android:background="@drawable/background1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:text="超市名称"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size40"/>

                    <EditText
                        android:id="@+id/new_register_shopname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight ="100px"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入超市名称"
                        android:textColor="@color/text_787878"
                        android:textSize="@dimen/text_Size40"/>
                    <LinearLayout
                        android:id="@+id/shopName_del"
                        android:layout_width="130px"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="×"
                            android:gravity="center"
                            android:background="@drawable/shape_user_tel_del"
                            android:textColor="@color/text_df1122"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="49px"
                    android:background="@drawable/background1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:text="所在地区"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size40"/>

                    <TextView
                        android:id="@+id/new_register_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight ="100px"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请选择城市地区"
                        android:textColor="@color/text_787878"
                        android:textSize="@dimen/text_Size40"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="49px"
                    android:background="@drawable/background1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:text="详细地址"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size40"/>

                    <EditText
                        android:id="@+id/new_register_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight ="100px"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="具体到街道、门牌号，不少于5个字符"
                        android:textColor="@color/text_787878"
                        android:textSize="@dimen/text_Size40"/>
                    <LinearLayout
                        android:id="@+id/address_del"
                        android:layout_width="130px"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="×"
                            android:gravity="center"
                            android:background="@drawable/shape_user_tel_del"
                            android:textColor="@color/text_df1122"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="49px"
                    android:background="@drawable/background1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:text="备用电话（非必填）"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size40"/>

                    <EditText
                        android:id="@+id/new_register_resphone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="100px"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入备用电话"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/text_787878"
                        android:textSize="@dimen/text_Size40"/>
                    <LinearLayout
                        android:id="@+id/spare_del"
                        android:layout_width="130px"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="×"
                            android:gravity="center"
                            android:background="@drawable/shape_user_tel_del"
                            android:textColor="@color/text_df1122"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginBottom="34px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="49px"
                    android:background="@drawable/background1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:text="邀请码（非必填）"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size40"/>

                    <EditText
                        android:id="@+id/new_register_invite"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="100px"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入邀请码"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/text_787878"
                        android:textSize="@dimen/text_Size40"/>
                    <LinearLayout
                        android:id="@+id/invite_del"
                        android:layout_width="130px"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="×"
                            android:gravity="center"
                            android:background="@drawable/shape_user_tel_del"
                            android:textColor="@color/text_df1122"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="71px"
                android:layout_marginRight="71px"
                android:layout_marginTop="51px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未填写邀请码的注册地址需要审核才可以下单，审核需要1-3个工作日"
                    android:textColor="@color/text_212121"
                    android:textSize="@dimen/text_Size28"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:text="如需帮助，请联系客服"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size28"/>

                    <TextView
                        android:layout_width="322px"
                        android:layout_height="wrap_content"
                        android:text=" 400-711-5858"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size32"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/zc_next"
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="131px"
                android:background="@drawable/select_login_btn"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/text_FBFEFD"
                android:textSize="@dimen/text_Size38"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>