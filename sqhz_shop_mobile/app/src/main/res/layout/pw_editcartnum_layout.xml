<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#30000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scollV"
        android:layout_width="1000px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:fillViewport="true"
        >


       <LinearLayout
            android:id="@+id/screen_pw_ll"
            android:layout_width="1000px"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="30px"
                android:paddingRight="50px">

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="130px">

                    <ImageView
                        android:id="@+id/good_path"
                        android:layout_width="700px"
                        android:layout_height="700px"
                        android:src="@drawable/collect_true" />
                </LinearLayout>
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >

                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:id="@+id/goods_detail_lunbo"
                        android:layout_width="match_parent"
                        android:layout_height="560px"
                        app:canLoop="true"
                        />

                </LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/good_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="加州原野坚果炒货美国开心果"
                        android:textSize="@dimen/ts30" />

                    <TextView
                        android:id="@+id/good_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="25.20"
                        android:textSize="@dimen/ts28"
                        android:textColor="@color/color_EC193A" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="20px"
                        android:background="@color/line_gray"/>

                    <LinearLayout
                        android:id="@+id/ll_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存:"
                            android:textSize="@dimen/ts28"/>

                        <TextView
                            android:id="@+id/good_stock"
                            android:layout_width="300px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:textSize="@dimen/ts28"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:id="@+id/stock_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="20px"
                    android:background="@color/line_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格:"
                        android:textSize="@dimen/ts28"/>

                    <TextView
                        android:id="@+id/good_modle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textSize="@dimen/ts28"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="20px"
                    android:background="@color/line_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20px"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位:" />

                    <TextView
                        android:id="@+id/good_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="20px"
                    android:background="@color/line_gray"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起订量:"
                        android:textSize="@dimen/ts28"/>

                    <TextView
                        android:id="@+id/good_min_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:textSize="@dimen/ts28"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="20px"
                    android:background="@color/line_gray"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200px"
                    android:text="订购数量"
                    android:textSize="@dimen/ts30" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100px"
                        android:background="@drawable/background"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_minus"
                            android:layout_width="120px"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40px"
                                android:layout_height="40px"
                                android:src="@drawable/edit_minus" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/line_gray" />

                        <TextView
                            android:id="@+id/good_num"
                            android:layout_width="400px"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/line_gray" />

                        <LinearLayout
                            android:id="@+id/ll_plus"
                            android:layout_width="120px"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40px"
                                android:layout_height="40px"
                                android:src="@drawable/edit_plus" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center"
                        android:text="袋" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="600px"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_collection"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/collect_false" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sure_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_EC193A"
                    android:text="加入购物车"
                    android:paddingLeft="85px"
                    android:paddingTop="35px"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_Size38" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/left_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/scollV" />
</RelativeLayout>