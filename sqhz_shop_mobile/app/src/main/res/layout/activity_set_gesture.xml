<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gesture_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请绘制手势密码"
        android:textSize="@dimen/text_Size44"
        android:textColor="@color/text_black_212121"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:visibility="visible"/>
    <com.xdjd.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_header"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100px"
        android:layout_marginBottom="20px"
        android:visibility="gone"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"/>
    <TextView
        android:id="@+id/prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_Size40"
        android:textColor="@color/text_black_212121"
        android:gravity="center"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textSize="@dimen/text_Size44"
        android:textColor="@color/text_black_212121"
        android:gravity="center"
        android:visibility="gone" />

    <com.xdjd.view.GestureLockView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:id="@+id/forgot_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        android:gravity="center_vertical" >
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换账号登录"
            android:textColor="@color/text_black_212121"
            android:textSize="@dimen/text_Size44" />
        <ImageView
            android:id="@+id/image1"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="15px"
            android:src="@drawable/next" />
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/next"
            android:layout_marginRight="60dp" />

    </LinearLayout>
</LinearLayout>