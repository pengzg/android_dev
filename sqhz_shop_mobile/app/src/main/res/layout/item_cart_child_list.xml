<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244px"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/child_rl"
            android:layout_width="144px"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/child_iv"
                android:layout_width="wrap_content"
                android:layout_height="58px"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:src="@drawable/cart_left_point_select"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="210px"
            android:layout_height="match_parent"
            android:paddingBottom="10px"
            android:paddingTop="5px">

            <ImageView
                android:id="@+id/goods_iv"
                android:layout_width="210px"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/default_pic"
                />

            <TextView
                android:id="@+id/presell_tv"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text="预售"
                android:textColor="@color/white"
                android:background="@color/tran_black3"
                android:textSize="@dimen/text_Size30"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="55px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="26px">

            <LinearLayout
                android:id="@+id/item_goods_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:minLines="2"
                    android:text="智利进口红酒 智象美露干红葡萄酒750ml*6瓶"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/text_Size34"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goods_start_num"
                        android:layout_width="430px"
                        android:layout_height="wrap_content"
                        android:text="起订数量:1"
                        android:textColor="@color/text_555"
                        android:textSize="@dimen/text_Size32"/>

                    <TextView
                        android:id="@+id/goods_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:text="库存:30"
                        android:textColor="@color/text_555"
                        android:textSize="@dimen/text_Size32"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goods_wholesale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥499.00"
                        android:textColor="@color/text_df1122"
                        android:textSize="@dimen/text_Size28"/>

                   <!-- <TextView
                        android:id="@+id/goods_batch_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:text="箱规价:499.00"
                        android:textColor="@color/text_black_212121"
                        android:textSize="@dimen/text_Size28"/>-->
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="330px"
                android:layout_height="match_parent"
                android:paddingRight="40px"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="常温"
                    android:textColor="@color/color_f07e1e"
                    android:textSize="@dimen/text_Size32"/>

                <RelativeLayout
                    android:layout_width="285px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="100px"
                    >

                    <ImageView
                        android:id="@+id/goods_minus_iv"
                        android:layout_width="80px"
                        android:layout_height="match_parent"
                        android:src="@drawable/minus"/>

                    <TextView
                        android:id="@+id/goods_buy_num"
                        android:layout_width="95px"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="135"
                        android:textColor="@color/text_df1122"
                        android:textSize="@dimen/text_Size24"/>

                    <ImageView
                        android:id="@+id/goods_plus_iv"
                        android:layout_width="80px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/plus"/>

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/delete"
            android:layout_width="220px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_EC193A"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/text_Size36"
            android:visibility="gone"/>


    </LinearLayout>

</LinearLayout>