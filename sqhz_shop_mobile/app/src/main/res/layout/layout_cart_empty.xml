<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_cart_empty_main"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="292px"
        android:layout_marginBottom="50px"
        android:scaleType="fitCenter"
        android:src="@drawable/empty_cart_img"/>

    <TextView
        android:id="@+id/empty_cart_tips_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_Size40"
        android:text="购物车还是空的,赶紧行动吧~"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/go_for_a_stroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去逛逛"/>

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去收藏夹"/>-->

    </LinearLayout>

</LinearLayout>