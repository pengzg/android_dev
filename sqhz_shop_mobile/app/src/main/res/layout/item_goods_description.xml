<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/order_detail_item_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/goods_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:src="@drawable/default_pic" />
        </LinearLayout>

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1000"
            android:ellipsize="end"
            android:lines="2"
            android:textSize="@dimen/ts30"
            android:gravity="center_vertical|left"
            android:text="" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_gravity="right|center_vertical"
            android:minWidth="60dp">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
                android:text="8"
                android:textSize="12sp"
                android:textColor="@color/text_df1122" />

            <TextView
                android:layout_below="@+id/goods_price"
                android:id="@+id/goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="x3" />
        </RelativeLayout>

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:paddingBottom="3dp"
        android:layout_below="@+id/order_detail_item_linerlayout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/goods_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_df1122"
            android:text="45"
            android:textSize="12sp" />

        <!--<TextView
            android:id="@+id/the_single_goods_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="gone" />-->
    </LinearLayout>

    <!--<ImageView
        android:id="@+id/ylx_goods_description_down"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/down_icon"
        android:visibility="gone" />-->

</RelativeLayout>