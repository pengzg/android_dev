<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_goods_list"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/item_goods_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingBottom="7dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/goods_iv"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/default_pic"/>

                <TextView
                    android:id="@+id/presell_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/tran_black3"
                    android:gravity="center"
                    android:text="预售"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts30"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp">

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="智利进口红酒 智象美露干红葡萄酒750ml*6瓶"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/ts28"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goods_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="规格: 750ml*6瓶"
                            android:textColor="@color/text_555"
                            android:textSize="@dimen/ts24"/>


                        <!--<TextView
                            android:id="@+id/goods_delivery_mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15px"
                            android:text="配送方式:常温"
                            android:textColor="@color/text_555"
                            android:textSize="@dimen/text_Size32"/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17px"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!--<TextView
                            android:id="@+id/goods_start_num"
                            android:layout_width="430px"
                            android:layout_height="wrap_content"
                            android:text="起订数量:1"
                            android:textSize="@dimen/text_Size32"
                            android:textColor="@color/text_555"/>-->

                        <TextView
                            android:id="@+id/goods_stock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="库存:30"
                            android:textColor="@color/text_555"
                            android:textSize="@dimen/text_Size32"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/goods_wholesale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="批发价:499.00"
                android:textColor="@color/color_EC193A"
                android:textSize="@dimen/ts28"
            />

            <TextView
                android:id="@+id/goods_batch_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:text="箱规价:499.00"
                android:visibility="invisible"
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"
            />

            <TextView
                android:id="@+id/stockout_tv"
                android:layout_width="275px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/stockout"
                android:textColor="@color/color_EC193A"
                android:textSize="@dimen/text_Size42"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/plus_minus_rl"
                android:layout_width="275px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
            >


                <!--<LinearLayout
                    android:id="@+id/goods_minus_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/goods_minus_iv"
                        android:layout_width="90px"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/minus"/>

                    <TextView
                        android:id="@+id/goods_buy_num"
                        android:layout_width="95px"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="135"
                        android:textColor="@color/text_df1122"
                        android:textSize="@dimen/text_Size24"/>

                </LinearLayout>
-->
                <ImageView
                    android:id="@+id/goods_plus_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/cart_red"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>