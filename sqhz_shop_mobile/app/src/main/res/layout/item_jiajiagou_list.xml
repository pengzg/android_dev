<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/goods_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:src="@drawable/default_pic"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:layout_marginTop="20px"
                      android:paddingLeft="20px"
                      android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_212121"
                android:textSize="@dimen/text_Size42"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20px"
                          android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/text_df1122"
                    android:textSize="@dimen/text_Size38"/>

                <TextView
                    android:id="@+id/goods_cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="x3"
                    android:textSize="@dimen/text_Size38"/>

            </LinearLayout>

            <TextView
                android:id="@+id/goods_bottom_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_Size38"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/select_goods_rl"
            android:layout_width="190px"
            android:layout_height="match_parent"
        >

            <ImageView
                android:id="@+id/select_iv"
                android:layout_width="wrap_content"
                android:layout_height="58px"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:src="@drawable/cart_left_point_select"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>