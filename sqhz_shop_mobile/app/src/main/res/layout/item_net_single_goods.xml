<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="15px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<TextView
                android:id="@+id/goods_code"
                android:layout_width="480px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_Size28"
                android:text="101022335452"/>-->

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="长城干红葡萄酒"
                android:textColor="@color/text_212121"
                android:textSize="@dimen/text_Size34"/>

            <TextView
                android:id="@+id/get_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="60"
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size34"/>


            <TextView
                android:id="@+id/goods_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10px"
                android:layout_marginRight="30px"
                android:text="¥2112.00"
                android:textColor="@color/text_df1122"
                android:textSize="@dimen/text_Size34"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5px"
            android:text="¥212.00"
            android:textColor="@color/text_df1122"
            android:textSize="@dimen/text_Size30"/>

        <!--<TextView
            android:id="@+id/goods_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="规格:6瓶*1箱"
            android:textSize="@dimen/text_Size30"
            android:textColor="@color/text_gray"/>-->


    </LinearLayout>


</LinearLayout>