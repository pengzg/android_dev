<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社区盒子"
            android:textColor="@color/black"
            android:textSize="@dimen/text_Size78"/>

        <TextView
            android:id="@+id/note_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="For Android V1.0.0 build"
            android:textSize="@dimen/text_Size44"/>

        <LinearLayout
            android:id="@+id/qr_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qr_code_img"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:layout_marginTop="50px"
                android:paddingLeft="60px"
                android:paddingRight="60px"
                android:scaleType="centerInside"
                android:src="@drawable/community_box"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:paddingLeft="50px"
                android:text="扫描二维码，您的朋友也可以下载社区盒子客户端"
                android:textSize="@dimen/text_Size44"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="50px"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:id="@+id/Version"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="检测更新"
            android:textSize="@dimen/text_Size44"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本 V"
            android:textSize="@dimen/text_Size44"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_Size44"/>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="50px"
            android:src="@drawable/next"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

</LinearLayout>