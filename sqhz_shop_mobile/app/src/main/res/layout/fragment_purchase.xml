<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/purchase_titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_666666"
                android:orientation="horizontal">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height_px"
                android:background="@color/white"
            >

                <LinearLayout
                    android:id="@+id/refresh_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ease_common_tab_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/refresh_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/main_update"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:padding="0.5dp">

                    <ImageView
                        android:id="@+id/bg_iv"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:src="@drawable/title_bg"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/unify_title"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="统配进货"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts26"/>

                        <TextView
                            android:id="@+id/direct_title"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="预售进货"
                            android:textSize="@dimen/ts26"/>


                    </LinearLayout>

                </RelativeLayout>

