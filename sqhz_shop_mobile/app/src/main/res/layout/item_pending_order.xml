<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />
    <View
        android:id="@+id/gap_line"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#FAFAFA" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="50px"
            android:paddingRight="50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺："
                android:textSize="@dimen/text_Size44" />
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="天秀生活超市"
                android:textColor="@color/black"
                android:textSize="@dimen/text_Size44" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="50px"
            android:paddingRight="50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textSize="@dimen/text_Size44" />
            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124345666777789"
                android:textSize="@dimen/text_Size44" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-10"
                android:textSize="@dimen/text_Size44" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30px"
            android:paddingLeft="50px"
            android:paddingRight="50px"
            android:gravity="center_vertical" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人："
                        android:textSize="@dimen/text_Size44" />
                    <TextView
                        android:id="@+id/receive_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_Size44" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:text="电话："
                        android:textSize="@dimen/text_Size44" />

                    <TextView
                        android:id="@+id/receive_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13163307039"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_Size44"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30px" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        android:textSize="@dimen/text_Size44" />
                    <TextView
                        android:id="@+id/receive_address"
                        android:layout_width="800px"
                        android:layout_height="wrap_content"
                        android:text="北京市海淀区中关村南大街12号"
                        android:maxLines="2"
                        android:textSize="@dimen/text_Size44" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@drawable/next" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"
            android:layout_marginTop="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="50px"
            android:paddingRight="50px">

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审核"
                android:textColor="@color/text_df1122"
                android:textSize="@dimen/text_Size44" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="@dimen/text_Size44" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47px"
                android:text="合计："
                android:textSize="@dimen/text_Size44"/>
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/dollar" />
            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400.01元"
                android:textColor="@color/text_df1122"
                android:layout_marginLeft="50px"
                android:textSize="@dimen/text_Size44" />
        </LinearLayout>
        <View
        android:id="@+id/end_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />
    </LinearLayout>


</LinearLayout>