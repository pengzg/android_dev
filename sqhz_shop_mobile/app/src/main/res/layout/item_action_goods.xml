<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="700px"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_goods_list"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_goods_ll"
            android:layout_width="match_parent"
            android:layout_height="518px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="310px"
                android:paddingBottom="10px"
                android:paddingTop="10px">

                <ImageView
                    android:id="@+id/goods_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="310px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_pic"
                    />

                <TextView
                    android:id="@+id/presell_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="70px"
                    android:layout_marginRight="70px"
                    android:background="@color/tran_black3"
                    android:gravity="center"
                    android:text="预售"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_Size32"
                    android:visibility="gone"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:minLines="2"
                    android:text="智利进口红酒 智象美露干红葡萄酒750ml*6瓶"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/text_Size36"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goods_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="规格: 750ml*6瓶"
                            android:textColor="@color/text_555"
                            android:textSize="@dimen/text_Size32"/>

                        <!-- <TextView
                             android:id="@+id/goods_delivery_mode"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="配送方式:常温"
                             android:textColor="@color/text_555"
                             android:textSize="@dimen/text_Size26"/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25px"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!--<TextView
                            android:id="@+id/goods_start_num"
                            android:layout_width="315px"
                            android:layout_height="wrap_content"
                            android:text="起订数量:1"
                            android:textColor="@color/text_555"
                            android:textSize="@dimen/text_Size26"/>-->

                        <TextView
                            android:id="@+id/goods_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存:30"
                            android:textColor="@color/text_555"
                            android:textSize="@dimen/text_Size26"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:layout_marginLeft="22px"
            android:layout_marginRight="22px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goods_wholesale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零售价:499.00"
                    android:textColor="@color/text_df1122"
                    android:textSize="@dimen/text_Size34"
                    />

                <TextView
                    android:id="@+id/goods_batch_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17px"
                    android:text="箱规价:499.00"
                    android:visibility="invisible"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/text_Size34"/>

            </LinearLayout>

            <TextView
                android:id="@+id/stockout_tv"
                android:layout_width="275px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/stockout"
                android:textColor="@color/text_df1122"
                android:textSize="@dimen/text_Size42"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/plus_minus_rl"
                android:layout_width="275px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/goods_plus_iv"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/cart_red"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>