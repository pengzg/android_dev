<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/distance_left_right"
                    android:paddingRight="@dimen/distance_left_right">

                    <TextView
                        android:id="@+id/order_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单号:124454784875362"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size38"/>

                    <TextView
                        android:id="@+id/order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-11-25 10:25:35"
                        android:textColor="@color/text_212121"
                        android:textSize="@dimen/text_Size38"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106px"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/distance_left_right"
                    android:paddingRight="@dimen/distance_left_right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待收货"
                        android:textSize="@dimen/text_Size38"
                        android:textColor="@color/text_212121"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货到付款"
                        android:textSize="@dimen/text_Size38"
                        android:textColor="@color/text_212121"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/distance_left_right"
                    android:paddingRight="@dimen/distance_left_right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人:张三"
                            android:textSize="@dimen/text_Size38"
                            android:textColor="@color/text_212121"/>

                        <TextView
                            android:id="@+id/phone_tv"
                            android:layout_marginLeft="70px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电话:13683310026"
                            android:textSize="@dimen/text_Size38"
                            android:textColor="@color/text_212121"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46px"
                        android:layout_marginBottom="50px"
                        android:text="地址:北京市海淀区中关村南大街12号院内科海福林大厦"
                        android:textColor="@color/text_black_212121"
                        android:textSize="@dimen/text_Size38"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"
                android:layout_marginTop="45px"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115px"
                android:background="@color/white"
                android:paddingLeft="@dimen/distance_left_right"
                android:paddingRight="@dimen/distance_left_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:gravity="center_vertical"
                    android:text="品名/规格"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/text_Size38"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:text="要货数量"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/text_Size38"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:text="金额小计"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/text_Size38"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"/>

            <com.xdjd.view.NoScrollListView
                android:id="@+id/goods_list_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:background="@color/white"
                android:scrollbars="none"></com.xdjd.view.NoScrollListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:paddingTop="45px"
                android:paddingBottom="45px"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="要货小计："
                        android:textSize="@dimen/text_Size38"
                        android:textColor="@color/text_212121"/>

                    <TextView
                        android:id="@+id/get_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Size38"
                        android:textColor="@color/text_212121"/>

                    <TextView
                        android:id="@+id/get_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Size38"
                        android:textColor="@color/text_212121"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发货小计："
                        android:textSize="@dimen/text_Size38"
                        android:textColor="@color/text_212121"/>

                    <TextView
                        android:id="@+id/send_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Size44"/>

                    <TextView
                        android:id="@+id/send_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_Size44"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备       注："
                        android:textSize="@dimen/text_Size38"
                        android:textColor="@color/text_212121"/>

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/text_Size44"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>