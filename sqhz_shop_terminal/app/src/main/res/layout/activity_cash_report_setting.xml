<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/titlebar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:paddingLeft="19dp"
        android:text="现金日报打印模式"
        android:textColor="@color/text_black_212121"
        android:textSize="@dimen/ts32"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingLeft="19dp"
        android:paddingRight="19dp">

        <LinearLayout
            android:id="@+id/ll_jd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_jd"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/check_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="简单"
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_jj"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/check_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="精简"
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_xx"
                android:layout_width="15dp"
                android:layout_height="15dp" android:src="@drawable/check_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="详细"
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="19dp"
        android:text="现金日报打印模式分为精简模式，简单模式，详细模式。简单模式只打印最后的销售金额总汇，
    精简模式打印客户销售金额汇总及现金明细，包含销售金额和上交款等。详细模式将客户的现金明细一同打印。"/>


</LinearLayout>