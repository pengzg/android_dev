<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_client_communication_directory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xdjd.distribution.activity.CustomerAddressListActivity">

    <include layout="@layout/titlebar"/>

    <!--<com.xdjd.view.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="请输入关键字"
        android:singleLine="true"
        android:textSize="15.0dip" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include layout="@layout/layout_search"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            android:id="@+id/pull_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.xdjd.view.NoScrollListView
                android:id="@+id/lv_customer_address_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/transparent">
            </com.xdjd.view.NoScrollListView>

        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

        <com.xdjd.utils.quickindex.QuickIndexBar
            android:id="@+id/bar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/tran_black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_index"
            android:gravity="center"
            android:text="A"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <TextView
        android:id="@+id/tv_customer_total_num"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:text="0位客户联系人"
        android:textColor="@color/text_black_212121"
        android:textSize="@dimen/ts28"/>

</LinearLayout>
