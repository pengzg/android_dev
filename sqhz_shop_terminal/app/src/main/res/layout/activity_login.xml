<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="218dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:src="@mipmap/login_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/background"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/account_ll"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/account_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/user_img"/>

                        <LinearLayout
                            android:id="@+id/ll_account_right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@id/account_iv"
                                android:layout_weight="1"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <EditText
                                    android:id="@+id/account_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:background="@null"
                                    android:gravity="center_vertical"
                                    android:hint="用户名"
                                    android:singleLine="true"
                                    android:textColor="@color/text_black_212121"
                                    android:textColorHint="@color/text_gray_b3b3"
                                    android:textSize="@dimen/ts28"/>

                                <RelativeLayout
                                    android:id="@+id/rl_account_del"
                                    android:layout_width="47dp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerInParent="true"
                                        android:background="@drawable/bg_oval_blue"
                                        android:gravity="center">

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="10dp"
                                            android:src="@mipmap/x"/>

                                    </LinearLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/ll_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:paddingLeft="12dp"
                                android:paddingRight="13dp">

                                <ImageView
                                    android:id="@+id/iv_arrow"
                                    android:layout_width="15dp"
                                    android:layout_height="7dp"
                                    android:background="@mipmap/bottom_arrow"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/password_ll"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/password_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:src="@mipmap/user_pwd"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:layout_toRightOf="@id/password_iv"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:id="@+id/password_et"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="密码"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:textColor="@color/text_black_212121"
                                android:textColorHint="@color/text_gray_b3b3"
                                android:textSize="@dimen/ts28"/>

                            <RelativeLayout
                                android:id="@+id/rl_password_del"
                                android:layout_width="47dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/bg_oval_blue"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:src="@mipmap/x"/>

                                </LinearLayout>
                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_eye"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageView
                                android:id="@+id/iv_eye"
                                android:layout_width="20dp"
                                android:layout_height="15dp"
                                android:background="@mipmap/i_login_eye_normal"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:id="@+id/forgot_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="28px"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="找回密码"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts24"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#545454"/>
                        <!--下划线-->
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_btn_login"
                android:text="登  录"
                android:textColor="@color/white"
                android:textSize="@dimen/ts30"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:onClick="click"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:text="去核销记录界面"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:visibility="gone">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E2E2E2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="第三方账号登录"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/ts28"
                />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E2E2E2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <!--QQ登录-->
                <ImageView
                    android:layout_width="157px"
                    android:layout_height="157px"
                    android:layout_weight="1"/>
                <!--微信登录-->
                <ImageView
                    android:id="@+id/login_weixin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@mipmap/weixin"/>
                <!--微博登录-->
                <ImageView
                    android:layout_width="157px"
                    android:layout_height="157px"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>