<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="@color/white"
              android:paddingBottom="5dp"
              android:paddingLeft="@dimen/common_margin"
              android:paddingRight="@dimen/common_margin"
              android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_oval_blue"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/ts30"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_good_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="铺货店铺数量:0"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/ts26"/>

                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="总数量:0"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/ts26"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nosale_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未销售:0"
                    android:textSize="@dimen/ts26"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_recall_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="已撤货:0"
                    android:textSize="@dimen/ts26"/>

                <TextView
                    android:id="@+id/tv_sale_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="已销售:0"
                    android:textSize="@dimen/ts26"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="19dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:src="@mipmap/right_arrow"/>
</LinearLayout>