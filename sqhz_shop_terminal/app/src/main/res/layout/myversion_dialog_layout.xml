<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/a_plan_menu_bac"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/myversion_img"
            android:layout_width="97dp"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:src="@mipmap/update_img"/>


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="21dp"
            android:text="软件更新提示"
            android:textColor="#218bff"
            android:textSize="@dimen/ts32"
            />

        <TextView
            android:id="@+id/dialog_version_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/ts28"
            android:layout_marginLeft="19.6dp"
            android:layout_marginRight="19.6dp"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.6dp"
            android:layout_marginRight="19.6dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:lineSpacingExtra="7dp"
            android:maxHeight="120dp"
            android:scrollbars="vertical"
            android:text="更新的内容"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/ts28"/>

        <!--<View
            android:id="@+id/custom_line"
            android:layout_width="match_parent"
            android:layout_marginTop="21.6dp"
            android:layout_height="1.0dip"
            android:background="#dad9de" />-->

        <LinearLayout
            android:id="@+id/linlin"
            android:layout_width="268dp"
            android:layout_height="52dp"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:id="@+id/select_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_no"
                    android:layout_width="112dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#666666"
                    android:textSize="@dimen/ts28"
                    />

                <View
                    android:id="@+id/dialog_line2"
                    android:layout_width="14dp"
                    android:layout_height="match_parent"
                    />

                <TextView
                    android:id="@+id/dialog_ok"
                    android:layout_width="112dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:background="@color/text_blue"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ts28"/>
            </LinearLayout>

            <TextView
                android:id="@+id/select_tv"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@color/text_blue"
                android:text="立即更新"
                android:textColor="#ffffff"
                android:textSize="@dimen/ts28"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>