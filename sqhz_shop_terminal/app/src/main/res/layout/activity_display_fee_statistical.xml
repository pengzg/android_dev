<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/ll_select_salesman"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_search1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin">

            <TextView
                android:id="@+id/tv_salesman"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="55dp"
                android:minWidth="50dp"
                android:singleLine="true"
                android:text="全部"
                android:textSize="@dimen/ts24"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/bottom_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_select_category"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_search1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="55dp"
                android:minWidth="50dp"
                android:singleLine="true"
                android:text="全部"
                android:textSize="@dimen/ts24"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/bottom_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_search1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/search_img"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="店铺名称"
                android:paddingLeft="12dp"
                android:textColorHint="@color/text_gray_b3b3"
                android:textSize="@dimen/ts24"/>

            <LinearLayout
                android:id="@+id/ll_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_marginRight="@dimen/common_margin"
                    android:src="@mipmap/x"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin">

        <RelativeLayout
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_type_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_date_oval"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/bottom_arrow"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="今日"
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts24"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_date_calendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="2017-07-01~2017-07-27"
                android:textColor="@color/black"
                android:textSize="@dimen/ts24"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="7dp"
                android:src="@mipmap/bottom_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/line_gray"/>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="总数量:0"
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"/>

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="返陈列总金额:0元"
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>