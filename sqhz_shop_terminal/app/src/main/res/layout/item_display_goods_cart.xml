<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="5dp"
              android:paddingLeft="11dp"
              android:paddingRight="11dp"
              android:paddingTop="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_black_212121"
                android:textSize="@dimen/ts28"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_max"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_max_price"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text=""
                            android:textSize="@dimen/ts22"/>

                        <LinearLayout
                            android:id="@+id/ll_max_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <com.xdjd.view.LastInputEditText
                                android:id="@+id/et_max_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/ts26"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/line_gray"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_max_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元/"
                            android:textSize="@dimen/ts22"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_min_price"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text=""
                            android:textSize="@dimen/ts22"/>

                        <LinearLayout
                            android:id="@+id/ll_min_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <com.xdjd.view.LastInputEditText
                                android:id="@+id/et_min_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/ts26"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/line_gray"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_min_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元/"
                            android:textSize="@dimen/ts22"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts22"/>
                        <TextView
                            android:id="@+id/tv_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts22"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_max_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_max"
                        android:layout_width="95dp"
                        android:layout_height="25dp">

                        <LinearLayout
                            android:id="@+id/ll_max_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_max_plus"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_max_minus"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/minus"/>

                            <EditText
                                android:id="@+id/et_max_num"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="7"
                                android:textColor="@color/text_blue"
                                android:textSize="@dimen/ts22"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_max_plus"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/plus"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_max_unit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:minWidth="13dp"
                        android:text="箱"
                        android:textSize="@dimen/ts24"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_min"
                        android:layout_width="95dp"
                        android:layout_height="27dp">

                        <LinearLayout
                            android:id="@+id/ll_min_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_min_plus"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_min_minus"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/minus"/>

                            <EditText
                                android:id="@+id/et_min_num"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="7"
                                android:textColor="@color/text_blue"
                                android:textSize="@dimen/ts24"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_min_plus"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/plus"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_min_unit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:minWidth="13dp"
                        android:text="瓶"
                        android:textSize="@dimen/ts24"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts22"/>
                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts22"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>