<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_inventory_manager_title"
            android:orientation="horizontal">

            <View
                android:id="@+id/bg_view"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_inventory_manager_title_true"/>

            <TextView
                android:id="@+id/tv_map_location"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="客户位置"
                android:textColor="@color/white"
                android:textSize="@dimen/ts30"/>

            <TextView
                android:id="@+id/tv_customer_list"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="客户列表"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/ts30"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <com.xdjd.view.NoScrollViewPager
        android:id="@+id/no_scroll_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.xdjd.view.NoScrollViewPager>

</LinearLayout>