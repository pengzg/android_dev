<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingLeft="@dimen/common_padding"
              android:paddingRight="@dimen/common_padding"
              android:paddingBottom="5dp"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <com.xdjd.view.roundedimage.RoundedImageView
            android:id="@+id/iv_pic"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head_cabinet"
            app:riv_corner_radius="7dp"
            app:riv_oval="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="007号柜子"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/ts26"/>

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号:20180411-79888"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/ts26"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:text="状态:"
                    android:textSize="@dimen/ts24"/>

                <TextView
                    android:id="@+id/tv_box_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="运行中"
                    android:textSize="@dimen/ts24"/>

                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存数量 : 0"
                    android:textColor="@color/text_black_212121"
                    android:textSize="@dimen/ts24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text=""
                    android:textSize="@dimen/ts24"/>

                <TextView
                    android:id="@+id/tv_boxtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="柜子类型 : "
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/ts24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="地址:"
                    android:textSize="@dimen/ts24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="@dimen/ts24"/>

                <TextView
                    android:id="@+id/tv_alertnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预警数 : 32"
                    android:textColor="@color/red"
                    android:textSize="@dimen/ts24"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_type_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_full_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="满箱:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

        <TextView
            android:id="@+id/tv_empty_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="空箱:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

        <TextView
            android:id="@+id/tv_lock_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取货中:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

        <TextView
            android:id="@+id/tv_operation_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="补货中:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

        <TextView
            android:id="@+id/tv_fix_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="维修:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_type_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总容量:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

        <TextView
            android:id="@+id/tv_left_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="剩余:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

        <TextView
            android:id="@+id/tv_unoccupied_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="空余:"
            android:textColor="@color/black"
            android:textSize="@dimen/ts24"/>

    </LinearLayout>

</LinearLayout>