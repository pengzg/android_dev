<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/a_plan_menu_bac"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="提示"
                android:textColor="@color/black"
                android:textSize="@dimen/ts30"/>

            <LinearLayout
                android:id="@+id/ll_close"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                android:src="@mipmap/x_close"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="7dp"
            android:minHeight="200dp"
            android:scrollbars="vertical"
            android:background="@drawable/bg_note"
            android:padding="5dp"
            android:gravity="top"
            android:textColorHint="@color/text_gray_b3b3"
            android:text=""
            android:textColor="@color/text_black_212121"
            android:textSize="@dimen/ts28"/>

        <View
            android:id="@+id/custom_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#dad9de"/>

        <LinearLayout
            android:id="@+id/linlin"
            android:layout_width="match_parent"
            android:layout_height="42.24dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_no"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_blue"
                android:textStyle="bold"
                android:textSize="@dimen/ts28"/>

            <View
                android:id="@+id/dialog_line2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dad9de"/>

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="确定"
                android:textStyle="bold"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/ts28" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>