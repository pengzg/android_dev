<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/a_plan_menu_bac"
        android:orientation="vertical">

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.6dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/text_black_212121"
            android:textSize="@dimen/text_Size42"
            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:text="请输入数量"
            android:textColor="@color/text_black_212121"
            android:textSize="@dimen/ts28"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="16.32dp"
            android:layout_marginTop="21.6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/dialog_edit"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="9"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:textSize="@dimen/ts26"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/custom_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:background="#dad9de"/>

        <LinearLayout
            android:id="@+id/linlin"
            android:layout_width="match_parent"
            android:layout_height="42.24dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_no"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="取消"
                android:textColor="#007aff"
                android:textSize="@dimen/ts28"
                android:textStyle="bold"/>

            <View
                android:id="@+id/dialog_line2"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dad9de"/>

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="确定"
                android:textColor="#007aff"
                android:textSize="@dimen/ts28"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>