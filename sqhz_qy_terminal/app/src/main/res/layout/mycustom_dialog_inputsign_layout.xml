<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/a_plan_menu_bac"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="签名"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/ts30"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#dad9de" />

        <com.xdjd.view.PaintView
            android:id="@+id/my_signview"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#dad9de" />

        <LinearLayout
            android:id="@+id/linlin"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/transparent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sign_cancel"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_blue"
                android:textStyle="bold"
                android:textSize="@dimen/ts28"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dad9de" />

            <TextView
                android:id="@+id/tv_sign_reset"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="重新签名"
                android:textColor="@color/text_blue"
                android:textStyle="bold"
                android:textSize="@dimen/ts28"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dad9de" />

            <TextView
                android:id="@+id/tv_sign_sure"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="确认签名"
                android:textStyle="bold"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/ts28" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>